@model CMSProject.Models.Summary

@{
    ViewBag.Title = "Contacts Summary";
}

<h2>Summary</h2>
<p></p>
<h3>Contacts</h3>

<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Email Address
        </th>
        <th>
            Birthdate
        </th>
        <th>
            Number of Computers
        </th>
    </tr>

    @foreach (var item in Model.Contacts)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfComputers)
            </td>
        </tr>
    }
</table>

<h3>Address Type Summary</h3>


<table class="table">
    <tr>
        <th>
            Address Type
        </th>
        <th>
            Count
        </th>
    </tr>

    
    @foreach (var eltype in Model.AddressTypeNumbers)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => eltype.TypeName)
            </td>
            <td>
                @Html.DisplayFor(modelitem => eltype.TypeCount)
            </td>
        </tr>
        
    }

</table>

    <h3>Total Number of Computers</h3>

    <p>
        @Html.DisplayFor(modelitem => Model.TotalComputerCount)
    </p>
   